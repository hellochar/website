.applet_container(style="margin: 10px auto;")
  = javascript_include_tag "http://www.java.com/js/deployJava.js"
  :javascript 
    var attributes ={code: "#{sketch.classpath}", archive: "#{sketch.jarfile}", width: "#{sketch.width}", height: "#{sketch.height}", image: 'loading.gif'};
    var parameters = {"java_arguments": "-Djnlp.packEnabled=true" };
    var version = '1.5';
    deployJava.runApplet(attributes, parameters, version);
  %noscript
    %div
      %object(classid="clsid:8AD9C840-044E-11D1-B3E9-00805F499D93"
              codebase="http://java.sun.com/update/1.6.0/jinstall-6u20-windows-i586.cab"
              width="#{sketch.width}"
              height="#{sketch.height}"
              standby="Loading Processing software...") 
        %param(name="code" value="#{sketch.classpath}")/
        %param(name="archive" value="#{sketch.jarfile}")/ 
        %param(name="mayscript" value="true")/
        %param(name="scriptable" value="true")/ 
        %param(name="image" value="loading.gif")/
        %param(name="boxmessage" value="Loading Processing software...")/
        %param(name="boxbgcolor" value="#FFFFFF")/ 
        %param(name="test_string" value="inner")/
        %p
          %strong This browser does not have a Java Plug-in.
          %br/ 
          <a href="http://www.java.com/getjava" title="Download Java Plug-in">Get the latest Java Plug-in here.</a>
